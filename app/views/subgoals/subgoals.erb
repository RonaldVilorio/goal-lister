<div class="container">
  <%count = 0%>
  <%@user.goals.each do |goal|%>
    <%goal.subgoals.each do |subgoal|%>
      <ul>
        <h3><%=subgoal.content%></h3>
        <br>
        <%count = count + 1%>
      </ul>
      <%end%>
  <%end%>
</div>
<br>


<h2>You have a total of <%=count%> subgoals</h2>
