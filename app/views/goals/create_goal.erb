
<form action="/goals" method="post">
  <label for="content">Goal Content:</label>
  <input type="text" name="content" id="content"  >
  <br><br>

  <label>Click the button to add a Subgoal</label>
  <br>

  <input type="button" value="Add" onclick="addInput()"/>

  <span id="response"></span>
  <script>
  var countBox = 1;
  var boxName = 0;
  function addInput()
  {
       var boxName="subgoal"+countBox;
  document.getElementById('response').innerHTML+='<br/><input type="text" id="'+boxName+'" value="'+boxName+'" "  /><br/>';
       countBox += 1;
  }
  </script>

  <br><br>

  <label>Artist Name:</label>
  <input type="text" name="artist_name" id="Artist Name">
  <br><br>

  <input type="submit" value="Create">

</form>
